<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
			xmlns:fx="http://javafx.com/fxml"
			fx:controller="aa.view.SignupMenu"
			stylesheets="@../css/style.css"
			styleClass="Background"
			prefHeight="400.0" prefWidth="600.0">

	<center>
		<VBox alignment="CENTER" spacing="20">
			<Label text="Signup" styleClass="menu-label"/>
			<TextField promptText="username" maxWidth="300" fx:id="usernameTextField"/>
			<PasswordField promptText="password" maxWidth="300" fx:id="passwordField"/>
			<HBox alignment="CENTER" spacing="20" fx:id="avatarsBox"></HBox>
			<Label text="" styleClass="error-text" fx:id="errorText"/>
			<HBox alignment="CENTER" spacing="20">
				<Button text="signup" onMouseClicked="#signupButtonClicked"/>
				<Button text="back" onMouseClicked="#backButtonClicked"/>
			</HBox>
		</VBox>
	</center>

</BorderPane>
