<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
			xmlns:fx="http://javafx.com/fxml"
			fx:controller="aa.view.eventcontrollers.LoginMenuEventController"
			stylesheets="@../css/style.css"
			styleClass="Background"
			prefHeight="400.0" prefWidth="600.0">

	<center>
		<VBox alignment="CENTER" spacing="20">
			<Label text="Login" id="label" styleClass="menu-label"/>
			<TextField promptText="username" maxWidth="300" fx:id="username"/>
			<PasswordField promptText="password" maxWidth="300" fx:id="password"/>
			<HBox alignment="CENTER" spacing="20">
				<Button text="submit" onMouseClicked="#submitButtonClicked"/>
				<Button text="guest" onMouseClicked="#guestButtonClicked"/>
			</HBox>
			<Button text="already have an account?" onMouseClicked="#gotoSignupMenuClicked" styleClass="signup-menu-button"/>
		</VBox>
	</center>

</BorderPane>
